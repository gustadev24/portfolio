---
import  "@styles/global.css";
import "@fontsource-variable/figtree";
import "@fontsource-variable/fredoka";
const { title = "Gustadev - Desarrollador Web" } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="flex flex-col items-center bg-radial-[at_top] from-secondary from-5% to-primary to-100% text-secondary-foreground">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
