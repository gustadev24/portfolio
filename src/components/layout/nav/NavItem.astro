---
import { cn } from '@lib/utils';
import type { HTMLTag, Polymorphic } from 'astro/types';

type TagType = 'a' | 'button';

type Props<TagName extends HTMLTag> = Polymorphic<{ as: TagName & TagType }>;

const { as: Tag, class: className, ...rest } = Astro.props;
---

<Tag class={cn("flex gap-2 stroke-secondary-foreground dark:stroke-muted items-center hover:text-accent hover:stroke-accent hover:bg-radial hover:from-accent/15 hover:to-transparent hover:to-70% transition-colors hover:cursor-pointer group", className)} {...rest}>
  <slot />
</Tag>
