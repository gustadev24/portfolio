---
import DesktopIcon from "@assets/icons/desktop.svg";
import LanguageIcon from "@assets/icons/language.svg";
import NavItem from "./NavItem.astro";

const customItems = [
  {
    name: "Theme",
    icon: DesktopIcon,
    class:
      "size-5 stroke-secondary-foreground dark:stroke-muted group-hover:stroke-accent",
  },
  {
    name: "Language",
    icon: LanguageIcon,
    class:
      "size-5 fill-secondary-foreground dark:fill-muted group-hover:fill-accent",
  },
];
---

<menu
  class="flex gap-3 px-3 py-2 bg-navbar/80 dark:text-muted border-[1px] border-secondary-foreground dark:border-muted rounded-xl shadow-nav backdrop-blur-md"
>
  {
    customItems.map(({ icon: Icon, class: className }) => (
      <NavItem>
        <Icon
          slot="icon"
          class={className}
        />
      </NavItem>
    ))
  }
</menu>
