---
import DesktopIcon from "@icons/desktop.svg";
import LanguageIcon from "@icons/language.svg";
import NavItem from "./NavItem.astro";
---

<div class="flex gap-3 px-3 py-2 bg-navbar dark:text-muted border-[1px] border-secondary-foreground dark:border-muted rounded-md shadow-nav">
  <NavItem>
    <DesktopIcon slot="icon" class="size-5 stroke-secondary-foreground dark:stroke-muted group-hover:stroke-accent" />
  </NavItem>
  <NavItem>
    <LanguageIcon slot="icon" class="size-5 stroke-secondary-foreground dark:stroke-muted group-hover:stroke-accent" />
  </NavItem>
</div>
