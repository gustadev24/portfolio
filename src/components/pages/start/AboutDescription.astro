---
import { getI18n, Locale } from '@i18n/index';
import { cn } from '@lib/utils';

interface Props {
  class?: string;
}

const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale: currentLocale as Locale });

const { class: className } = Astro.props;
---

<div class={cn("shadow-container bg-secondary/35 rounded-xl p-5 text-2xl", className)} set:html={i18n.ABOUT.DESCRIPTION} />
