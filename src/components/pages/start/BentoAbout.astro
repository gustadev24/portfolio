---
import { Image } from "astro:assets";
import BottomLeft from "@assets/images/bottom-left.webp";
import BottomRight from "@assets/images/bottom-right.webp";
import TopRight from "@assets/images/top-right.webp";
import AboutDescription from "./AboutDescription.astro";
---

<article class="hidden md:grid grid-cols-3 grid-rows-[repeat(3,_minmax(180px,_220px))] gap-4">
  <AboutDescription class="col-span-2 row-span-2"/>
  <Image src={TopRight} alt="Top right" class="rounded-xl shadow-container w-full h-full object-cover" />
  <Image src={BottomRight} alt="Bottom right" class="rounded-xl shadow-container w-full h-full object-cover row-span-2" />
  <Image src={BottomLeft} alt="Bottom left" class="rounded-xl shadow-container w-full h-full object-cover object-top col-span-2" />

</article>
