---
import { cn } from '@lib/utils';
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
  class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<button class={cn("flex gap-1.5 p-3 group")} {...rest}>
  <slot name="icon" />
  <slot name="text" />
</button>
